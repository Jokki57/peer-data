{
  "compilerOptions": {
    "outDir": "lib/",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es5",
    "declaration": true,
    "noImplicitAny": false, //switch to true!
    "removeComments": true,
    "rootDir": "."
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/**/*.ts",
    "node_modules/@types/jasmine/index",
    "node_modules/@types/core-js/index",
    "node_modules/@types/node/index",
    "node_modules/@types/socket.io-client/index",
    "node_modules/@types/webrtc/RTCPeerConnection"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "lib"
  ]
}
