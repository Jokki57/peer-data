{
  "compilerOptions": {
    "outDir": "./lib/",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es5", "dom", "scripthost"],
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noEmitOnError": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/**/*.ts",
    "./node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "index.d.ts",
    "src/**/*.spec.ts",
    "node_modules",
    "examples",
    "lib"
  ]
}
